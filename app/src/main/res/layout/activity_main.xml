<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/korol_i_shut" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About the best punk band \n''the King and the Clown''"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                style="@style/Question"
                android:text="1. What year the band was founded?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp">

                    <RadioButton
                        android:id="@+id/btn1_1"
                        style="@style/Answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1991" />

                    <RadioButton
                        android:id="@+id/btn1_2"
                        style="@style/Answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1998" />

                    <RadioButton
                        android:id="@+id/btn1_3"
                        style="@style/Answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1985" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                style="@style/Question"
                android:text="2. Where the band was founded?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp">

                    <RadioButton
                        android:id="@+id/btn2_1"
                        style="@style/Answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leningrad" />

                    <RadioButton
                        android:id="@+id/btn2_2"
                        style="@style/Answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moscow" />

                    <RadioButton
                        android:id="@+id/btn2_3"
                        style="@style/Answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boksitogorsk" />
                </RadioGroup>
            </LinearLayout>


            <TextView
                style="@style/Question"
                android:text="3. What were the options, that musicians discussed, for the first name of the group?" />

            <CheckBox
                android:id="@+id/btn3_1"
                style="@style/Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Armageddon" />

            <CheckBox
                android:id="@+id/btn3_2"
                style="@style/Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Anarchist" />

            <CheckBox
                android:id="@+id/btn3_3"
                style="@style/Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Zarezanniy oduvanchik" />

            <TextView
                style="@style/Question"
                android:text="4. What song of Viktor Tsoy the king and the clown made a cover for in 2000?" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">

                <RadioButton
                    android:id="@+id/btn4_1"
                    style="@style/Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zvezda po imeni Solntse" />

                <RadioButton
                    android:id="@+id/btn4_2"
                    style="@style/Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood group" />

                <RadioButton
                    android:id="@+id/btn4_3"
                    style="@style/Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sledi za soboi" />
            </RadioGroup>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kish" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Question"
                        android:text="5. What's the name of Michael Gorshenev brother's rock band ?" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <RadioButton
                            android:id="@+id/btn5_1"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kniazz" />

                        <RadioButton
                            android:id="@+id/btn5_2"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kukriniksi" />

                        <RadioButton
                            android:id="@+id/btn5_3"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lumen" />
                    </RadioGroup>

                    <TextView
                        style="@style/Question"
                        android:text="6. what song was the first clip of the band?" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <RadioButton
                            android:id="@+id/btn6_1"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eli miaso muzhiki" />

                        <RadioButton
                            android:id="@+id/btn6_2"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hunter" />

                        <RadioButton
                            android:id="@+id/btn6_3"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kukla kolduna" />
                    </RadioGroup>

                    <TextView
                        style="@style/Question"
                        android:text="7. in what year did Kniaz quit the band?" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <RadioButton
                            android:id="@+id/btn7_1"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2009" />

                        <RadioButton
                            android:id="@+id/btn7_2"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2011" />

                        <RadioButton
                            android:id="@+id/btn7_3"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2012" />
                    </RadioGroup>

                    <TextView
                        style="@style/Question"
                        android:text="8. in what year Michael Gorshok Gorshenev died?" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <RadioButton
                            android:id="@+id/btn8_1"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2014" />

                        <RadioButton
                            android:id="@+id/btn8_2"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2013" />

                        <RadioButton
                            android:id="@+id/btn8_3"
                            style="@style/Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="He's still alive in our hearts" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/result"
                        style="@style/Answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:onClick="result"
                        android:text="Result" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
